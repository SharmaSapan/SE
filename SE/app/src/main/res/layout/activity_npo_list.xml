<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="ExtraText">
    !--tools:context="app.src.main.java.com.example.a4p02app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botBord">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nporecycler"
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layout_margin="5dp"

            />

    </LinearLayout>


    <View
        android:id="@+id/botBord"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/dark_blue"
        app:layout_constraintBottom_toTopOf="@id/botNav" />

    <View
        android:id="@+id/botNav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/light_orange"
        app:layout_constraintBottom_toBottomOf="parent" />


    <ImageButton
        android:id="@+id/homer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toStartOf="@id/profile"
        android:background="@color/light_orange"
        android:src="@drawable/ic_round_home_24"
        android:onClick="goHome"
        android:contentDescription="@string/todo"/>

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toStartOf="@id/info"
        android:background="@color/light_orange"
        android:src="@drawable/ic_round_person_24"
        android:onClick="goProfile"
        android:contentDescription="@string/todo" />


    <ImageButton
        android:id="@+id/favs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="5dp"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toEndOf="@id/info"
        android:src="@drawable/ic_round_favorite_24"
        android:background="@color/light_orange"
        android:onClick="goFavs"
        android:contentDescription="@string/todo"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="5dp"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toEndOf="@id/favs"
        android:src="@drawable/ic_round_edit_24"
        android:background="@color/light_orange"
        android:onClick="makePost"
        android:contentDescription="@string/todo"
        />
    <ImageButton
        android:id="@+id/info"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/favs"
        android:src="@drawable/ic_round_import_contacts_page"
        android:background="@color/light_orange"
        android:onClick="goNPOList"
        android:contentDescription="@string/todo"
        />

    <TextView
        android:id="@+id/homeword"
        android:layout_width="55dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@+id/homer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/listing"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="@color/dark_orange"
        android:fontFamily="@font/raleway_bold"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>