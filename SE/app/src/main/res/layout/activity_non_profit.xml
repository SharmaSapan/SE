<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nonProfit">

    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/light_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/headerline"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@id/header" />


    <TextView
        android:id="@+id/npNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="55dp"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/non_profit_name"
        android:textColor="@color/dark_blue"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/light_blue"
        android:src="@drawable/ic_round_edit_page"
        android:onClick="openSettings"
        android:contentDescription="@string/todo"
    />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/light_blue"
        android:src="@drawable/ic_round_arrow_back_24"
        android:onClick="goBack"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="220dp"
        android:layout_height="170dp"
        android:layout_marginTop="72dp"
        android:background="@color/grey"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profilePart"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintBottom_toTopOf="@id/botBord"
        android:background="@color/purple_200"
        android:layout_margin="10dp"
        android:textAlignment="center"/>

    <View
        android:id="@+id/botBord"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/dark_blue"
        app:layout_constraintBottom_toTopOf="@id/botNav" />

    <View
        android:id="@+id/botNav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/light_orange"
        app:layout_constraintBottom_toBottomOf="parent" />


     <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/profilePart"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/dark_blue"
        android:contentDescription="@string/todo"
        android:onClick="sendEmail"
         android:src="@drawable/email_icon"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/dark_blue"
        android:contentDescription="TODO"
        android:onClick="openMap"
        app:layout_constraintBottom_toTopOf="@id/profilePart"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/map_icon"
        app:layout_constraintTop_toBottomOf="@id/profilePic" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/dark_blue"
        android:contentDescription="@string/todo"
        android:onClick="callOrganization"
        app:layout_constraintBottom_toTopOf="@id/profilePart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        android:src="@drawable/phone_icon"/>

    <ImageView
        android:id="@+id/visitWebsite"
        android:onClick="openWebsite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/profilePart"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/dark_blue"
        android:contentDescription="@string/todo"
        android:src="@drawable/visit_web_icon"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botBord"
        android:src="@drawable/ic_round_comment_24"
        android:layout_margin="10dp"
        android:background="@null"
        android:contentDescription="@string/todo" />

    <ImageButton
        android:id="@+id/homer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toStartOf="@id/profile"
        android:background="@color/light_orange"
        android:src="@drawable/ic_round_home_24"
        android:onClick="goHome"
        android:contentDescription="@string/todo"
        />

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toStartOf="@id/info"
        android:background="@color/light_orange"
        android:src="@drawable/ic_round_person_24"
        android:onClick="goProfile"
        android:contentDescription="@string/todo" />


    <ImageButton
        android:id="@+id/favs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toEndOf="@id/info"
        android:src="@drawable/ic_round_favorite_24"
        android:background="@color/light_orange"
        android:onClick="goFavs"
        android:contentDescription="@string/todo"/>


    <ImageButton
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toEndOf="@id/favs"
        android:src="@drawable/ic_round_edit_24"
        android:background="@color/light_orange"
        android:onClick="makePost"
        android:contentDescription="@string/todo"
        />
    <ImageButton
        android:id="@+id/info"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/botBord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/favs"
        android:src="@drawable/ic_round_import_contacts_24"
        android:background="@color/light_orange"
        android:onClick="goNPOList"
        android:contentDescription="@string/todo"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
