<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nonProfit">


    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="220dp"
        android:layout_height="170dp"
        android:layout_marginTop="72dp"
        android:background="@color/grey"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/profilePart"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:background="@color/purple_200"
        android:text="@string/profile_details"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="84dp"
        android:background="@color/dark_blue"
        android:contentDescription="@string/todo"
        android:onClick="sendEmail"
        app:layout_constraintBottom_toTopOf="@id/profilePart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintVertical_bias="0.502" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="132dp"
        android:background="@color/dark_blue"
        android:contentDescription="TODO"
        android:onClick="openMap"
        app:layout_constraintBottom_toTopOf="@id/profilePart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintVertical_bias="0.502" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/dark_blue"
        android:contentDescription="@string/todo"
        android:onClick="callOrganization"
        app:layout_constraintBottom_toTopOf="@id/profilePart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePic" />

    <ImageView
        android:id="@+id/visitWebsite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="76dp"
        android:background="@color/dark_blue"
        android:contentDescription="@string/todo"
        android:onClick="openWebsite"
        android:src="@drawable/visit_web_icon"
        app:layout_constraintBottom_toTopOf="@id/profilePart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintVertical_bias="0.502" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@null"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_round_comment_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/profilePart"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="@+id/profilePart" />


</androidx.constraintlayout.widget.ConstraintLayout>
