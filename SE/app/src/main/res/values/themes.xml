<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.4P02App" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_lightgrey</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_300</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textColorHint">@color/teal_300</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name = "TextAppearance.AppCompat.Widget.ActionBar.Title"
        parent="@android:style/TextAppearance">
        <item name ="android:textSize">25sp</item>
        <item name ="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name = "Theme.4P02App.NoActionBar" >
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
    </style>
</resources>